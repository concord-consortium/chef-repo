# Generated by Chef for <%= node[:fqdn] %>
# Local modifications will be overwritten.
[<%= @shortname %>]
name=<%= @description %>
<% if @use_mirrorlist %>
mirrorlist=<%= @url %>
<% else %>
baseurl=<%= @url %>
<% end %>
failovermethod=priority
enabled=1
<% if @key_filename %>
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/<%= @key_filename %>
<% else %>
gpgcheck=0
<% end %>
